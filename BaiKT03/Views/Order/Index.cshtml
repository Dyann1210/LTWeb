@model IEnumerable<Order>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Tên order</th>
                <th>Mô tả</th>
                <th>Gía tiền</th>
                <th>Hình ảnh</th>
                <th>Tên nhà cung cấp</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.price</td>
                    <td><img src="@item.ImageUrl" width="200px" /></td>
                    <td>@item.Supplier.Name</td>
                    <td>
                        <a asp-action="Upsert" asp-route-id="@item.Id">Edit</a> |
                        <a href="#">Details</a> |
                        <a href="#" onclick="confirmDelete(@item.Id, $(this))">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Order" asp-action="Upsert" class="btn btn-primary">Thêm mới</a>
</div>

<script>
    function confirmDelete(id, row) {
        if (confirm("Ban co chac chan muon xoa san pham co id " + id + "?")) {
            xoa(id, $(row))
        }
    }


    function xoa(id, row) {
        $.ajax({
            url: 'Order/Delete',  //Truoc so 1 ben duoi nut ESC
            data: { id: id },
            type: "POST",
            success: function (data) {
                row.closet("tr").remove();
            }
        })
    }

</script>